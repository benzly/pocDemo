<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_call_menu_panel_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:background="#60000000"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="5dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/video_call_record"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/ic_toolbar_recording" />

        <TextView
            android:id="@+id/union_toolbar_record_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录像"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/video_call_capture"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/ic_toolbar_capture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截屏"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>